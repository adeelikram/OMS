<%- include('../includes/header.ejs') %>
    <!-- Dashboard Container -->
    <div class="dashboard-container">
        <%- include('../includes/side-bar.ejs') %>
            <!-- Dashboard Content
    ================================================== -->
            <div class="dashboard-content-container" data-simplebar>
                <div class="dashboard-content-inner">

                    <!-- Dashboard Headline -->
                    <div class="dashboard-headline">
                        <h3>Employee History</h3>
                        <!-- Breadcrumbs -->
                        <nav id="breadcrumbs" class="dark">
                            <ul>
                                <li><a href="#">Home</a></li>
                                <li><a href="#">Dashboard</a></li>
                                <li>History</li>
                            </ul>
                        </nav>
                    </div>

                    <!-- Row -->
                    <div class="row" style="display:''">

                        <!-- Dashboard Box -->
                        <div class="col-xl-12">
                        <div class="dashboard-box margin-top-0" style="overflow-x:auto;">

 <!-- Headline -->
                            <div class="headline">
                                <h3><i class="icon-feather-flag"></i>
                                    Edit Employee
                                </h3>
                            </div>
                            
                             <%- include ("../partials/messages") %>
                                <div class="content with-padding padding-bottom-10">
                                            <div class="row">                
                                                <div class="col-xl-4">
                                                    <div class="submit-field">
                                                        <h5>Full/Half Time</h5>
                                                        <h6><br></h6>
                                                        <select
                                                            id="employee_jobtype"
                                                            class="browser-default custom-select "
                                                            data-live-search="true">
                                                            <% if (editing) { %>
                                                                <% if (employee.jobType) { %>
                                                                    <option value="<%= employee.jobType %>" selected><%= employee.jobType %></option>
                                                                    <option value="Full Time">Full Time</option>
                                                                    <option value="Half Time">Half Time</option>      
                                                                <% } else { %>
                                                                    <% if (employee.jobType === undefined) { %>
                                                                            <option value="" selected>Select</option>
                                                                            <option value="Full Time">Full Time</option>
                                                                            <option value="Half Time">Half Time</option>
                                                                    <% } else { %>
                                                                        <option value="Full Time">Full Time</option>
                                                                        <option value="Half Time">Half Time</option>
                                                                    <% } %>
                                                                <% } %>
                                                            <% } else { %>
                                                                <option value="" selected>Select</option>
                                                                <option value="Full Time">Full Time</option>
                                                                <option value="Half Time">Half Time</option>
                                                            <% } %>
                                                        </select>
                                                    </div>
                                                </div>
                                                
                                                <div class="col-xl-4">
                                                    <div class="submit-field">
                                                        <h5>Vaccations</h5>
                                                        <h6><br></h6>
                                                        <input type="text" id="employee_vaccations" class="with-border"
                                                            placeholder="Vaccations"
                                                            value="<% if (editing) { %><%= employee.vaccations %><% } %>"
                                                             <%- disabled ? (' disabled') : '' %>>
                                                    </div>
                                                </div>
                                            
                                            </div>
                                        </div>
                                        <div class="col-xl-12">
                                            <button onclick="handleSubmitAdminEditEmployee(<%= JSON.stringify({ editing, id: editing ? employee._id : null }) %>)" class="button ripple-effect big margin-top-30 margin-bottom-30">
                                                Spara
                                            </button>
                                        </div>

                            <div class="headline">
                                <h3><i class="icon-feather-flag"></i>
                                    <%= monthsCount %>
                                        Months
                                </h3>
                            </div>

                            <div class="container-fluid">
                                <main>
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th style="vertical-align:top">Month Report</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (months.length> 0) { %>
                                                <% for (let month of months) { %>
                                                    <tr>
                                                        <td>
                                                            <a href="/admin/employee-history/<%=employee._id%>/<%=month%>"><%=month%></a>
                                                        </td>
                                                    </tr>
                                                    <% } %>
                                                        <% } else { %>
                                                            <h1>No Months Found!</h1>
                                                            <% } %>
                                        </tbody>

                                    </table>
                                </main>

                            </div>
                            
                        </div>
                        </div> 

                    </div>
                    <!-- Row / End -->
                </div>
            </div>

            <%- include('../includes/footer.ejs') %>