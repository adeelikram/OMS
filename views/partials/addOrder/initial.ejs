<div class="col-xl-4">
    <div class="submit-field">
        <h5>Customer (required)</h5>
            <select id="order_customer"
            class="selectpicker"
            data-live-search="true" name="order_customer">
            <% if (editing) { %>
                <% if (customers.length > 0) { %>
                    <% for (let customer of customers) { %>
                        <% if(customer === order.customer) { %>
                            <option data-tokens="<%=customer%>" value="<%=customer%>" selected><%=customer%></option>
                        <% } else { %>
                            <option data-tokens="<%=customer%>" value="<%=customer%>"><%=customer%></option>
                        <% } %>
                    <% } %>
                <% } %>
            <% } else { %>
                <% if (customers.length> 0) { %>
                    <% for (let customer of customers) { %>
                        <option data-tokens="<%=customer%>" value="<%=customer%>"><%=customer%></option>
                    <% } %>
                <% } %>
            <% } %>
        </select>
    </div>
</div>
<input type="hidden" name="customerOrderNumber" <%- disabled ? (' disabled') : '' %>>


<div class="col-xl-4">
    <div class="submit-field">
        <h5>Contact Name</h5>
        <input type="text" name="order_clientName"
            class="with-border" placeholder="Contact name"
            value="<% if (editing) { %><%= order.clientName %><% } %>"
            required <%- disabled ? (' disabled') : '' %>>
    </div>
</div>

<div class="col-xl-4">
    <div class="submit-field">
        <h5>Phone nr</h5>
        <input type="text" name="order_contact" class="with-border"
            placeholder="Phone nr"
            value="<% if (editing) { %><%= order.contact %><% } %>"
            required <%- disabled ? (' disabled') : '' %>>
    </div>
</div>

<div class="col-xl-4">
    <div class="submit-field">
        <h5>Email</h5>
        <h6><br></h6>
        <input type="text" name="order_email" class="with-border"
            placeholder="Email"
            value="<% if (editing) { %><%= order.email %><% } %>"
            required <%- disabled ? (' disabled') : '' %>>
    </div>
</div>
<div class="col-xl-4">
    <div class="submit-field">
        <h5>Order Date</h5>
        <% if (editing) { %>
            <h6>(Current: <% if (editing && order.orderDate) { %>
                    <%= order.orderDate.toDateString() %>
                        <% } %>)</h6>
            <% }%>
                <% if (editing) { %>
                    <input <%- disabled ? (' disabled') : '' %> <% if
                        (order.orderDate !=null) { %>
                    type="text"
                    <% } else { %>
                        type= "date"
                        <% }%>
                            name="order_orderDate" class="with-border"
                            placeholder="Deadline"
                            <% if (editing && order.orderDate
                                !=null) { %>
                                value="<%=
                                    order.orderDate.toDateString()
                                    %>
                                    "
                                    <% } %>>
                                        <% } %>
                                            <% if (!editing) { %>
                                                <input
                                                    <%- disabled ? (' disabled') : '' %>
                                                    type="date"
                                                    name="order_orderDate"
                                                    class="with-border"
                                                    placeholder="Deadline">
                                                <% } %>
    </div>
</div>

<div class="col-xl-4">
    <div class="submit-field">
        <h5>Deadline</h5>
        <% if (editing) { %>
            <h6>(Current: <% if (editing && order.orderDeadline) { %>
                    <%= order.orderDeadline.toDateString() %>
                        <% } %>)</h6>
            <% }%>
                <% if (editing) { %>
                    <input <%- disabled ? (' disabled') : '' %> <% if
                        (order.orderDeadline !=null) { %>
                    type="text"
                    <% } else { %>
                        type= "date"
                        <% }%>
                            name="order_orderDeadline" class="with-border"
                            placeholder="Deadline"
                            <% if (editing && order.orderDeadline
                                !=null) { %>
                                value="<%=
                                    order.orderDeadline.toDateString()
                                    %>
                                    "
                                    <% } %>>
                                        <% } %>
                                            <% if (!editing) { %>
                                                <input
                                                    <%- disabled ? (' disabled') : '' %>
                                                    type="date"
                                                    name="order_orderDeadline"
                                                    class="with-border"
                                                    placeholder="Deadline">
                                                <% } %>
    </div>
</div>

<div class="col-xl-4">
    <div class="submit-field">
        <h5>Fakturainformation</h5>
        <h6><br></h6>
        <input <%- disabled ? (' disabled') : '' %> type="text" name="order_invoiceInfo"
            class="with-border"
            value="<% if (editing) { %><%= order.invoiceInfo %><% } %>"
            required></input>
    </div>
</div>

<div class="col-xl-4">
    <div class="submit-field">
        <h5>Faktura nummer</h5>
        <h6><br></h6>
        <input <%- disabled ? (' disabled') : '' %> type="text"
            name="order_invoiceNumber" class="with-border" value="0" required
            ></input>
    </div>
</div>

<div class="col-xl-4">
    <div class="submit-field">
        <h5>Fakturerat</h5>
        <h6><br></h6>
        <input <%- disabled ? (' disabled') : '' %> type="text"
            name="order_isInvoiceGenerated" class="with-border" value="0"
            required></input>
    </div>
</div>

<div class="col-xl-4">
    <div class="submit-field">
        <h5>Bostadsanpasaning</h5>
        <select name="order_housingAdaption"
            id="order_housingAdaption"
            class="browser-default custom-select "
            data-live-search="true">
            <% if (editing) { %>
                <% if (order.housingAdaption) { %>
                    <option value="true" <%- order.housingAdaption ? 'selected' : '' %>>Yes</option>
                    <option value="false" <%- order.housingAdaption ? 'selected' : '' %>>No</option>
                <% } %>
            <% } else { %>
                <option value="true">Yes</option>
                <option value="false" selected>No</option>
            <% } %>
        </select>
    </div>
</div>