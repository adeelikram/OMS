<div class="col-xl-4">
    <div class="submit-field">
        <h5>Customer Number</h5>
        <input type="text" name="order_CustomerNumber" class="with-border"
            placeholder="Customer"
            value="<% if (editing) { %><%= order.customer %><% } %>"
            required <%- disabled ? (' disabled') : '' %>>
    </div>
</div>
<input type="hidden" name="customerOrderNumber" <%- disabled ? (' disabled') : '' %>>


<div class="col-xl-4">
    <div class="submit-field">
        <h5>Contact Name</h5>
        <input type="text" name="order_CustomerName"
            class="with-border" placeholder="Contact name"
            value="<% if (editing) { %><%= order.clientName %><% } %>"
            required <%- disabled ? (' disabled') : '' %>>
    </div>
</div>

<div class="col-xl-4">
    <div class="submit-field">
        <h5>Phone nr</h5>
        <input type="text" name="order_Phone1" class="with-border"
            placeholder="Phone nr"
            value="<% if (editing) { %><%= order.contact %><% } %>"
            required <%- disabled ? (' disabled') : '' %>>
    </div>
</div>

<div class="col-xl-4">
    <div class="submit-field">
        <h5>Email</h5>
        <h6><br></h6>
        <input type="text" name="order_Email" class="with-border"
            placeholder="Email"
            value="<% if (editing) { %><%= order.email %><% } %>"
            required <%- disabled ? (' disabled') : '' %>>
    </div>
</div>

<div class="col-xl-4">
    <div class="submit-field">
        <h5>Order Date</h5>
        <% if (editing) { %>
            <h6>(Current: <% if (editing && order.orderDate) { %>
                    <%= order.orderDate.toDateString() %>
                        <% } %>)</h6>
            <% }%>
                <% if (editing) { %>
                    <input <%- disabled ? (' disabled') : '' %> <% if
                        (order.orderDate !=null) { %>
                    type="text"
                    <% } else { %>
                        type= "date"
                        <% }%>
                            name="order_OrderDate" class="with-border"
                            placeholder="Deadline"
                            <% if (editing && order.orderDate
                                !=null) { %>
                                value="<%=
                                    order.orderDate.toDateString()
                                    %>
                                    "
                                    <% } %>>
                                        <% } %>
                                            <% if (!editing) { %>
                                                <input
                                                    <%- disabled ? (' disabled') : '' %>
                                                    type="date"
                                                    name="order_OrderDate"
                                                    class="with-border"
                                                    placeholder="Deadline">
                                                <% } %>
    </div>
</div>


<div class="col-xl-4">
    <div class="submit-field">
        <h5>Delivery Address</h5>
        <h6><br></h6>
        <input type="text" name="order_DeliveryAddress1" class="with-border"
            placeholder="Delivery Address"
            required>
    </div>
</div>

<div class="col-xl-4">
