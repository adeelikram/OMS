<%- include('./includes/header.ejs') %>
    <!-- Dashboard Container -->
    <div class="dashboard-container">
        <%- include('./includes/side-bar.ejs') %>
            <!-- Dashboard Content
    ================================================== -->
            <div class="dashboard-content-container" data-simplebar>
                <div class="dashboard-content-inner">

                    <!-- Dashboard Headline -->
                    <div class="dashboard-headline">
                        <h3>Manage Orders</h3>
                        <!-- Breadcrumbs -->
                        <nav id="breadcrumbs" class="dark">
                            <ul>
                                <li><a href="#">Home</a></li>
                                <li><a href="#">Dashboard</a></li>
                                <li>Manage Orders</li>
                            </ul>
                        </nav>
                    </div>

                    <!-- Row -->
                    <div class="row">

                        <!-- Dashboard Box -->
                        <!-- <div class="col-xl-12"> -->
                        <div class="dashboard-box margin-top-0" style="overflow-x:auto;">

                            <!-- Headline -->
                            <div class="headline">
                                <h3><i class="icon-feather-flag"></i>
                                    <%= ordersCount %>
                                        Orders
                                </h3>
                            </div>

                            <div class="container-fluid">
                                <main>
                                    <div>
                                        <%- include ("./partials/messages") %>
                                    </div>
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th style="vertical-align:top">Customer</th>
                                                <th style="vertical-align:top">Customer Order Number</th>
                                                <th style="vertical-align:top">Accomplished</th>
                                                <th style="vertical-align:top">Order Date</th>
                                                <th style="vertical-align:top">Order Deadline</th>
                                                <th style="vertical-align:top"></th>
                                                <th style="vertical-align:top"></th>
                                                <th style="vertical-align:top"></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (orders.length> 0) { %>
                                                <% for (let order of orders) { %>
                                                    <tr>
                                                        <td>
                                                            <%=order.customer%>
                                                        </td>
                                                        <td>
                                                            <%= order.number%>
                                                        </td>
                                                        <td>
                                                            <%= order.accomplished%>
                                                        </td>
                                                        <td>
                                                            <% if (order.orderDate ) { %>
                                                                <%= order.orderDate.toDateString() %>
                                                                    <% } %>
                                                        </td>

                                                        <td>
                                                            <% if (order.orderDeadline ) { %>
                                                                <%= order.orderDeadline.toDateString() %>
                                                                    <% } %>
                                                        </td>
                                                        <td>
                                                            <form action="/archive-order/<%= order._id %>"
                                                                method="post">
                                                                <button type="submit" class="btn btn-success"
                                                                    onclick="return confirm('Are you sure you want to archive the order?')">
                                                                    Archive
                                                                </button>
                                                            </form>
                                                        </td>
                                                        <td>

                                                            <button class="btn btn-info">
                                                                <a href="/get-edit-order/<%= order._id %>?edit=true">
                                                                    Update</a>
                                                            </button>

                                                        </td>
                                                        <td>

                                                            <form action="/delete-order/<%= order._id %>?_method=DELETE"
                                                                method="post">
                                                                <button type="submit" class="btn btn-danger"
                                                                    onclick="return confirm('Are you sure you want to delete the order?')">
                                                                    Delete
                                                                </button>
                                                            </form>
                                                        </td>
                                                    </tr>
                                                    <% } %>
                                                        <% } else { %>
                                                            <h1>No Orders Found!</h1>
                                                            <% } %>
                                        </tbody>

                                    </table>
                                </main>

                            </div>
                        </div>
                        <!-- </div> -->

                    </div>
                    <!-- Row / End -->
                </div>
            </div>

            <%- include('./includes/footer.ejs') %>