<%- include('./includes/header.ejs') %>
    <!-- Dashboard Container -->
    <div class="dashboard-container">
        <%- include('./includes/side-bar.ejs') %>
            <!-- Dashboard Content
    ================================================== -->
            <div class="dashboard-content-container" data-simplebar>
                <div class="dashboard-content-inner">

                    <!-- Dashboard Headline -->
                    <div class="dashboard-headline">
                        <h3>
                            Add Contractor
                        </h3>

                        <!-- Breadcrumbs -->
                        <nav id="breadcrumbs" class="dark">
                            <ul>
                                <li><a href="#">Home</a></li>
                                <li><a href="#">Dashboard</a></li>
                                <li>
                                    Add Contractor
                                </li>
                            </ul>
                        </nav>
                    </div>

                    <!-- Row -->
                    <div class="row">

                        <!-- Dashboard Box -->
                        <div class="col-xl-12">
                            <div class="dashboard-box margin-top-0">
                                <!-- Headline -->
                                <div class="headline">
                                    <h3><i class="icon-feather-award"></i>Add Contractor</h3>
                                </div>
                                <%- include ("./partials/messages") %>
                                        <div class="content with-padding padding-bottom-10">
                                            <div class="row">

                                                <div class="col-xl-4">
                                                    <div class="submit-field">
                                                        <h5>Company</h5>
                                                        <input type="text" class="with-border"
                                                            name="contractor_company"
                                                            placeholder="Company"
                                                            value="<% if (editing) { %><%= contractor.company %><% } %>">
                                                    </div>
                                                </div>
                                                
                                                    
                                                <div class="col-xl-4">
                                                    <div class="submit-field">
                                                        <h5>Contractor</h5>
                                                        <input type="text" class="with-border"
                                                            name="contractor_contractor"
                                                            placeholder="Contractor"
                                                            value="<% if (editing) { %><%= contractor.contractor %><% } %>">
                                                    </div>
                                                </div>

                                                <div class="col-xl-4">
                                                    <div class="submit-field">
                                                        <h5>Email</h5>
                                                        <input type="text" class="with-border"
                                                            name="contractor_email"
                                                            placeholder="Email"
                                                            value="<% if (editing) { %><%= contractor.email %><% } %>">
                                                    </div>
                                                </div>

                                                <div class="col-xl-4">
                                                    <div class="submit-field">
                                                        <h5>Phone</h5>
                                                        <input type="text" class="with-border"
                                                            name="contractor_phone"
                                                            placeholder="Phone"
                                                            value="<% if (editing) { %><%= contractor.phone %><% } %>">
                                                    </div>
                                                </div>

                                                <div class="col-xl-4">
                                                    <div class="submit-field">
                                                        <h5>Customer</h5>
                                                        <input type="text" class="with-border"
                                                            name="contractor_customer"
                                                            placeholder="Customer"
                                                            value="<% if (editing) { %><%= contractor.customer %><% } %>">
                                                    </div>
                                                </div>

                                                <div class="col-xl-4">
                                                    <div class="submit-field">
                                                        <h5>Rating</h5>
                                                        <input type="text" class="with-border"
                                                            name="contractor_rating"
                                                            placeholder="Rating"
                                                            value="<% if (editing) { %><%= contractor.rating %><% } %>">
                                                    </div>
                                                </div>

                                                <div class="col-xl-4">
                                                    <div class="submit-field">
                                                        <h5>Comments</h5>
                                                        <textarea class="with-border"
                                                            name="contractor_comments"
                                                            placeholder="Comments"><% if (editing) { %><%= contractor.comments %><% } %></textarea>
                                                    </div>
                                                </div>

                                                <div class="col-xl-4">
                                                    <div class="submit-field">
                                                        <h5>Neatseat?</h5>
                                                        <input type="checkbox" style="box-shadow: none; width: 20px; outline: none;"
                                                            id="contractor_neatseat"
                                                            <%- editing && contractor.neatseat ? 'checked' : '' %>
                                                        >
                                                    </div>
                                                </div>

                                                    
                                                

                                            </div>
                                        </div>
                                        <div class="col-xl-12">
                                            <button type="button"
                                                onclick="<%= editing ? `handleEditTender('${contractor._id}')` : 'handleAddContractor()' %>"
                                                class="button ripple-effect big margin-top-30 margin-bottom-30">
                                                Save
                                            </button>
                                            <br>
                                        </div>
                            </div>
                        </div>
                    </div>

                    
                    <!-- Row / End -->
                    <%- include('./includes/footer.ejs') %>